            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32sp"
            android:text="King Solomon's Mines by Henry Rider Hagard ->"
            android:textSize="20sp"
            android:id="@+id/translated1"/>
        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32sp"
            android:text="Allan and the Holy Flower by Henry Rider Haggard ->"
            android:textSize="20sp"
            android:id="@+id/translated2"/>
