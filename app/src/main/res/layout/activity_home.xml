            android:textColor="#000000"
            android:paddingTop="10sp"
            android:text="Science-Fiction-Shamagra-Part-1-By-Muhammed-Zafar-Iqbal ->"
            android:textSize="20sp"
            android:id="@+id/bangla1"/>

        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32sp"
            android:text="Science-Fiction-Shamagra-Part-2-By-Muhammed-Zafar-Iqbal ->"
            android:textSize="20sp"
            android:id="@+id/bangla2"/>/>
        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32sp"
            android:text="Science-Fiction-Shamagra-Part-3-By-Muhammed-Zafar-Iqbal ->"
            android:textSize="20sp"
            android:id="@+id/bangla3"/>/>
        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32sp"
            android:text="Feluda Samagra-Part-1 ->"
            android:textSize="20sp"
            android:id="@+id/indian1"/>
        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32sp"
            android:text="Felu da part- 2 ->"
            android:textSize="20sp"
            android:id="@+id/indian2"/>

        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32sp"
            android:text="Felu da Part-3 ->"
            android:textSize="20sp"
            android:id="@+id/indian3"/>
